<div class="container mt-5 devise-container">
  <div class="row justify-content-center devise-row">
    <div class="col-md-6">
      <div class="card shadow-lg devise-card">
        <div class="card-body devise-card-body">
          <h2 class="text-center mb-4 devise-heading">Criar Conta</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "needs-validation devise-form") do |f| %>
            <div class="form-group mb-3 devise-form-group">
              <%= f.label :email, class: "form-label devise-form-label" %>
              <%= f.email_field :email, class: "form-control devise-form-control", required: true %>
            </div>

            <div class="form-group mb-3 devise-form-group">
              <%= f.label :password, class: "form-label devise-form-label" %>
              <%= f.password_field :password, class: "form-control devise-form-control", required: true %>
            </div>

            <div class="form-group mb-3 devise-form-group">
              <%= f.label :password_confirmation, class: "form-label devise-form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control devise-form-control", required: true %>
            </div>

            <%= f.submit "Cadastrar", class: "btn btn-success btn-block devise-btn" %>
          <% end %>

          <div class="text-center mt-3 devise-text-center">
            <%= link_to "JÃ¡ tem uma conta? Entrar", new_session_path(resource_name), class: "text-decoration-none devise-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
