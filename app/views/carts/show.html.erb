<h1 class="text-center my-4 text-uppercase">Carrinho de Compras</h1>

<% if @cart.cart_items.any? %>
  <div class="container">
    <!-- Tabela com os itens do carrinho -->
    <div class="card shadow-sm">
      <div class="card-body">
        <table class="table table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Produto</th>
              <th scope="col">Quantidade</th>
              <th scope="col">Preço</th>
              <th scope="col">Ação</th>
            </tr>
          </thead>
          <tbody>
            <% @cart.cart_items.each do |item| %>
              <tr>
                <td><%= item.product.name %></td>
                <td>
                  <!-- Spinner para selecionar quantidade -->
                  <%= form_with(url: update_item_cart_path(item.id), method: :put, local: true) do |f| %>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary btn-minus" type="button" data-id="<%= item.id %>">-</button>
                      </div>
                      <%= f.number_field :quantity, value: item.quantity, min: 1, class: 'form-control quantity-spinner', id: "quantity-#{item.id}" %>
                      <div class="input-group-append">
                        <button class="btn btn-outline-secondary btn-plus" type="button" data-id="<%= item.id %>">+</button>
                      </div>
                    </div>
                    <%= f.submit 'Atualizar', class: 'btn btn-warning mt-2 btn-block' %>
                  <% end %>
                </td>
                <td><%= number_to_currency(item.product.price * item.quantity) %></td>
                <td>
                  <%= button_to 'Remover', remove_item_cart_path(item.id), method: :delete, class: 'btn btn-danger', data: { confirm: 'Tem certeza que deseja remover este item?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Total do carrinho -->
    <div class="card mt-4">
      <div class="card-body d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Total:</h4>
        <h4 class="text-success mb-0"><%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }) %></h4>
      </div>
    </div>

    <!-- Botão de navegação para voltar aos produtos -->
    <div class="text-center my-4">
      <%= link_to 'Voltar aos Produtos', products_path, class: 'btn btn-outline-primary btn-lg' %>
    </div>

  </div>
<% else %>
  <p class="text-center alert alert-warning">Seu carrinho está vazio.</p>
  <div class="text-center my-4">
    <%= link_to 'Voltar aos Produtos', products_path, class: 'btn btn-outline-primary btn-lg' %>
  </div>
<% end %>

<!-- Script para aumentar/diminuir a quantidade -->
<script>
  document.addEventListener('turbo:load', function () {
  // Seleciona todos os botões de aumentar/diminuir
  const minusButtons = document.querySelectorAll('.btn-minus');
  const plusButtons = document.querySelectorAll('.btn-plus');

  // Adiciona evento de clique nos botões de diminuir quantidade
  minusButtons.forEach(button => {
    button.addEventListener('click', function () {
      const productId = button.getAttribute('data-id');
      const quantityField = document.getElementById(`quantity-${productId}`);
      let currentValue = parseInt(quantityField.value, 10);
      if (currentValue > 1) {
        quantityField.value = currentValue - 1;
      }
    });
  });

  // Adiciona evento de clique nos botões de aumentar quantidade
  plusButtons.forEach(button => {
    button.addEventListener('click', function () {
      const productId = button.getAttribute('data-id');
      const quantityField = document.getElementById(`quantity-${productId}`);
      let currentValue = parseInt(quantityField.value, 10);
      quantityField.value = currentValue + 1;
    });
  });
});

</script>
